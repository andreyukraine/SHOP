<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/countStoreGift"
        android:layout_toStartOf="@id/countStoreGift"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Name product" />

    <TextView
        android:id="@+id/countStoreGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_user_count"
        android:layout_toStartOf="@id/tv_user_count"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="0шт"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/tv_user_count"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="number"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:ignore="RtlCompat" />

    <include layout="@layout/border" />

</RelativeLayout>